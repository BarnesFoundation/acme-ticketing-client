{
	"compilerOptions": {
		"target": "es6", 
		"module": "commonjs",
		"strict": false, /* Enable all strict type-checking options. */
		"forceConsistentCasingInFileNames": true,
		"rootDir": ".",
		"outDir": "./dist",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"declaration": true
	},
	"include": [
		"src", "tests", "tests", "convenience.ts", "index.ts"
	],
	"exclude": ["node_modules"]
}